/* Medical Examination Report - Government Form Styling */

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Times New Roman', Times, serif;
    background-color: #f5f5f5;
    padding: 20px;
    line-height: 1.6;
}

.report-container {
    max-width: 210mm; /* A4 width */
    margin: 0 auto;
    background-color: white;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.page {
    width: 210mm;
    min-height: 297mm; /* A4 height */
    padding: 25mm 20mm;
    background-color: white;
    position: relative;
}

.page-break {
    page-break-before: always;
    margin-top: 20px;
}

/* Header Styling */
.header {
    text-align: center;
    margin-bottom: 30px;
    border-bottom: 3px double #000;
    padding-bottom: 20px;
}

.header h1 {
    font-size: 22px;
    font-weight: bold;
    margin-bottom: 10px;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.header h2 {
    font-size: 18px;
    font-weight: bold;
    margin-bottom: 15px;
    text-decoration: underline;
}

.header-info {
    display: flex;
    flex-direction: column;
    gap: 8px;
    margin-top: 15px;
    font-size: 14px;
}

.info-row {
    display: flex;
    justify-content: space-between;
    padding: 0 40px;
}

/* Section Styling */
.section {
    margin-bottom: 25px;
}

.section-title {
    font-size: 14px;
    font-weight: bold;
    text-transform: uppercase;
    background-color: #e8e8e8;
    padding: 10px;
    margin-bottom: 15px;
    border: 1px solid #000;
    text-align: center;
}

.section-subtitle {
    font-size: 12px;
    font-style: italic;
    text-align: center;
    margin-bottom: 15px;
    padding: 5px;
}

/* Form Groups */
.form-group {
    margin-bottom: 15px;
}

.form-group label {
    display: block;
    font-size: 13px;
    font-weight: 600;
    margin-bottom: 5px;
    color: #333;
}

.form-control {
    width: 100%;
    padding: 8px;
    border: none;
    border-bottom: 1px solid #000;
    font-size: 13px;
    font-family: 'Times New Roman', Times, serif;
    background-color: transparent;
}

.form-control:focus {
    outline: none;
    border-bottom: 2px solid #000;
}

textarea.form-control {
    border: 1px solid #000;
    padding: 8px;
    resize: vertical;
}

/* Inline Fields */
.inline-fields {
    display: flex;
    gap: 20px;
    flex-wrap: wrap;
}

.inline-field {
    flex: 1;
    min-width: 200px;
}

.inline-field label {
    display: inline;
    margin-right: 5px;
}

.form-control-inline {
    width: 150px;
    padding: 5px;
    border: none;
    border-bottom: 1px solid #000;
    font-size: 13px;
}

/* Checkbox Groups */
.checkbox-group {
    margin-bottom: 15px;
}

.checkbox-options {
    display: flex;
    gap: 20px;
    margin: 10px 0;
    flex-wrap: wrap;
}

.checkbox-options label {
    display: flex;
    align-items: center;
    gap: 5px;
    font-weight: normal;
}

.checkbox-options input[type="checkbox"] {
    width: 18px;
    height: 18px;
    border: 2px solid #000;
}

.checkbox-list {
    display: flex;
    flex-direction: column;
    gap: 8px;
    margin: 10px 0;
}

.checkbox-list label {
    display: flex;
    align-items: center;
    gap: 5px;
    font-weight: normal;
}

/* Vital Signs */
.vital-signs {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 15px;
    margin-top: 10px;
}

.vital-sign-item {
    display: flex;
    align-items: center;
    gap: 10px;
}

.vital-sign-item label {
    margin-bottom: 0;
    white-space: nowrap;
}

/* Injury Location */
.injury-location {
    display: flex;
    flex-direction: column;
    gap: 10px;
    margin-top: 10px;
}

.injury-location label {
    font-weight: normal;
}

.injury-location textarea {
    margin-bottom: 10px;
}

/* Evidence Table */
.evidence-table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 10px;
    border: 1px solid #000;
}

.evidence-table th,
.evidence-table td {
    border: 1px solid #000;
    padding: 8px;
    text-align: left;
    font-size: 13px;
}

.evidence-table th {
    background-color: #e8e8e8;
    font-weight: bold;
}

.form-control-table {
    width: 100%;
    border: none;
    padding: 5px;
    font-size: 13px;
}

/* Signature */
.signature {
    margin-top: 30px;
}

.signature-line {
    width: 300px;
    height: 60px;
    border-bottom: 2px solid #000;
    margin-top: 10px;
}

/* Definitions Section */
.definitions {
    margin-top: 20px;
    padding: 15px;
    border: 2px solid #000;
    background-color: #f9f9f9;
}

.definitions h4 {
    font-size: 13px;
    font-weight: bold;
    margin-top: 15px;
    margin-bottom: 8px;
}

.definitions h4:first-child {
    margin-top: 0;
}

.definitions p {
    font-size: 12px;
    margin-bottom: 8px;
    line-height: 1.5;
}

.definitions ul {
    margin-left: 20px;
    font-size: 12px;
}

.definitions li {
    margin-bottom: 6px;
    line-height: 1.5;
}

/* Print Styles */
@media print {
    body {
        background-color: white;
        padding: 0;
    }

    .report-container {
        box-shadow: none;
        max-width: 100%;
    }

    .page {
        width: 100%;
        margin: 0;
        padding: 15mm 20mm;
        box-shadow: none;
    }

    .page-break {
        page-break-before: always;
        margin-top: 0;
    }

    .form-control,
    .form-control-inline,
    .form-control-table {
        border-bottom: 1px solid #000;
    }

    /* Ensure inputs are visible in print */
    input, textarea {
        -webkit-print-color-adjust: exact;
        print-color-adjust: exact;
    }
}

/* Responsive Design for smaller screens */
@media screen and (max-width: 768px) {
    body {
        padding: 10px;
    }

    .page {
        width: 100%;
        min-height: auto;
        padding: 15px;
    }

    .header h1 {
        font-size: 18px;
    }

    .header h2 {
        font-size: 16px;
    }

    .info-row {
        padding: 0 10px;
        flex-direction: column;
        gap: 5px;
    }

    .vital-signs {
        grid-template-columns: 1fr;
    }

    .inline-fields {
        flex-direction: column;
    }

    .signature-line {
        width: 100%;
    }
}
